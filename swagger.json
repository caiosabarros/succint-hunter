{
  "swagger": "2.0",
  "info": {
    "title": "Contact API",
    "description": "API for retrieving Bug Bounty Projects information from hunter's own custom API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Basic documentation of the program.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/platforms/": {
      "get": {
        "description": "Get the list of platforms. A platform is a website hosting bug bounty programs.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Add a new platform to the database.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Immunefi"
                },
                "web3": {
                  "type": "bool",
                  "example": "true"
                },
                "url": {
                  "type": "string",
                  "example": "immunefi.com"
                },
                "description": {
                  "type": "string",
                  "example": "Get access to the most prolific security researchers in the blockchain universe."
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/platforms/{id}": {
      "get": {
        "description": "Get a platform by ID.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "description": "Update information for an existing platform.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "any"
                },
                "web3": {
                  "example": "any"
                },
                "url": {
                  "example": "any"
                },
                "description": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a specific platform by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/projects/": {
      "get": {
        "description": "Get all the projects in all bug bounty platforms.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Add a new bug bounty project to the current list.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "assets": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "6dVYzMEdR9WkW706ck4PoZ"
                      },
                      "revision": {
                        "type": "number",
                        "example": 1
                      },
                      "type": {
                        "type": [
                          "smart_contract",
                          "websites_and_applications",
                          "blockchain_dlt"
                        ],
                        "example": "smart_contract"
                      },
                      "url": {
                        "type": "string",
                        "example": "https://basescan.org/address/0xD1A0D188E861ed9d15773a2F3574a2e94134bA8f"
                      },
                      "description": {
                        "type": "string",
                        "example": "Pinto Protocol"
                      },
                      "isPrimacyOfImpact": {
                        "type": [
                          "null",
                          "boolean"
                        ],
                        "example": null
                      },
                      "addedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-12-04T16:58:00.000Z"
                      }
                    }
                  }
                },
                "language": {
                  "example": "any"
                },
                "slug": {
                  "example": "any"
                },
                "githubUrl": {
                  "example": "any"
                },
                "description": {
                  "example": "any"
                },
                "maxBounty": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/projects/{id}": {
      "get": {
        "description": "Get a bug bounty project by ID.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "description": "Update an existing bug bounty project by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "assets": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "6dVYzMEdR9WkW706ck4PoZ"
                      },
                      "revision": {
                        "type": "number",
                        "example": 1
                      },
                      "type": {
                        "type": [
                          "smart_contract",
                          "websites_and_applications",
                          "blockchain_dlt"
                        ],
                        "example": "smart_contract"
                      },
                      "url": {
                        "type": "string",
                        "example": "https://basescan.org/address/0xD1A0D188E861ed9d15773a2F3574a2e94134bA8f"
                      },
                      "description": {
                        "type": "string",
                        "example": "Pinto Protocol"
                      },
                      "isPrimacyOfImpact": {
                        "type": [
                          "null",
                          "boolean"
                        ],
                        "example": null
                      },
                      "addedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-12-04T16:58:00.000Z"
                      }
                    }
                  }
                },
                "language": {
                  "example": "any"
                },
                "slug": {
                  "example": "any"
                },
                "githubUrl": {
                  "example": "any"
                },
                "description": {
                  "example": "any"
                },
                "maxBounty": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete an existing bug bounty project by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}